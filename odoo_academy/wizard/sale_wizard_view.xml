<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="academy_sale_wizard_form_view">
            <field name="name">academy.sale.wizard.form</field>
            <field name="model">academy.sale.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Sale Order for Session">
                    <group>
                        <field name="session_id" />
                        <field name="session_student_ids" invisible="1"/>
                        <field name="student_ids" domain="[('id','in',session_student_ids)]"/>
                    </group>
                    <footer>
                        <button name="create_sale_orders" type="object" string="Create" class="oe_highlight"></button>
                        or
                        <button special="cancel" string="Cancel"></button>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="session_view_list">
            <field name="name">academy.session.list</field>
            <field name="model">academy.session</field>
            <field name="arch" type="xml">
                <tree string="Session List">
                    <field name="name"/>
                    <field name="instructor_id"/>
                </tree>
            </field>
        </record>

        <act_window id="launch_sale_wizard" name="Create Sale Order" binding_model="academy.session" res_model="academy.sale.wizard" view_mode="form" target="new" />
    </data>
</odoo>