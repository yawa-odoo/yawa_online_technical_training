<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_template_only_form_view_inherit_nypw">
            <field name="name">product.template.product.form.inherit.nypw</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="barcode" position="after">
                    <field name="pair_per_case"/>
                    <field name="price_per_pair"/>
                    <field name="sales_price" force_save="1"
                           attrs="{'readonly':['|', ('pair_per_case','!=',0), ('price_per_pair', '!=', 0)]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>